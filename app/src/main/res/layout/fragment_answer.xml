<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    tools:context=".presentation.answer.AnswerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/answer_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white_text"
            android:textSize="@dimen/text_size_16sp"
            android:layout_marginTop="@dimen/size_32dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/tv_question_in_answer"
            app:layout_constraintStart_toStartOf="@+id/tv_question_in_answer"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32dp"
            android:progressTint="@color/yellow"
            android:rating="5"
            app:layout_constraintEnd_toEndOf="@+id/tv_answer"
            app:layout_constraintStart_toStartOf="@+id/tv_answer"
            app:layout_constraintTop_toBottomOf="@+id/tv_answer" />

        <TextView
            android:id="@+id/tv_question_in_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_32dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:text="@string/question_example_todelete"
            android:textColor="@color/white_text"
            android:textSize="@dimen/text_size_20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32dp"
            android:backgroundTint="@color/red_button"
            android:text="@string/edit"
            android:textColor="@color/white_text"
            app:layout_constraintEnd_toEndOf="@+id/tv_answer"
            app:layout_constraintStart_toStartOf="@+id/tv_answer"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:backgroundTint="@color/red_button"
            android:text="@string/done"
            android:textColor="@color/white_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_answer"
            app:layout_constraintStart_toStartOf="@+id/tv_answer"
            app:layout_constraintTop_toBottomOf="@+id/btn_edit" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:indeterminateTint="@color/red_button"
            app:layout_constraintBottom_toBottomOf="@+id/tv_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_answer" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32dp"
            android:text="@string/rules_for_editing"
            android:textColor="@color/not_primary_text"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_question_in_answer"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_in_answer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
