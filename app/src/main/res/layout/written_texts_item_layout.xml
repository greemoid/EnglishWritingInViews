<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/grey_cards"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_day_of_writing">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">


            <TextView
                android:id="@+id/tv_question_in_insights"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="1. Describe your favorite holiday destination and why you like it."
                android:textColor="@color/white_text"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_difficulty_in_insights"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_difficulty_in_insights"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hard"
                android:textColor="@color/red_button"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_text_in_insights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:lines="5"
                android:text="My favorite holiday destination is the beautiful island of Bali, Indonesia. What I love most about Bali is its enchanting blend of culture, nature, and tranquility. The lush green rice terraces, pristine beaches, and vibrant coral reefs offer a breathtaking natural landscape to explore.  Moreover, Bali's rich cultural heritage, including its traditional dance, art, and rituals, captivates me every time I visit. The warmth and friendliness of the Balinese people create a welcoming atmosphere that makes you feel at home.  One of the highlights of Bali is its diverse cuisine, from delicious street food to gourmet restaurants. Exploring the local flavors is always a delightful experience.  Bali also provides the perfect balance between relaxation and adventure. Whether I want to meditate in a serene temple or surf on the wild waves, Bali has it all.  Overall, Bali's unique blend of spirituality, natural beauty, and vibrant culture makes it my favorite holiday destination, and I can't help but be drawn back to this paradise every chance I get."
                android:textColor="@color/not_primary_text"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tv_question_in_insights"
                app:layout_constraintTop_toBottomOf="@+id/tv_question_in_insights" />

            <RatingBar
                android:id="@+id/rating_bar_in_insights"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:progressTint="@color/yellow"
                android:rating="3.5"
                app:layout_constraintStart_toStartOf="@+id/tv_text_in_insights"
                app:layout_constraintTop_toBottomOf="@+id/tv_text_in_insights" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_day_of_writing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Сьогодні"
        android:textColor="@color/white_text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>