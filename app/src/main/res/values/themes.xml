<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.EnglishWritingInViews" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/status_bar_light</item>

        <item name="colorPrimary">@color/light_background</item>
        <item name="colorPrimaryDark">@color/status_bar_dark</item>
        <item name="colorAccent">@color/light_red_button</item>
        <item name="android:textColorPrimary">@color/text_color_black</item>
        <item name="android:textColorSecondary">@color/not_primary_text</item>
        <item name="colorControlNormal">@color/text_color_black</item>
        <item name="colorControlActivated">@color/hint_color</item>



    </style>


    <style name="Theme.EnglishWritingInViews" parent="Base.Theme.EnglishWritingInViews">
        <item name="checkboxStyle">@style/RedCheckBox</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="android:editTextStyle">@style/MyEditText</item>


    </style>


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/world_logo</item>
        <item name="windowSplashScreenBackground">@color/grey_cards</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.EnglishWritingInViews</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RedCheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/red_button</item>
        <item name="buttonIconTint">@color/white_text</item>
    </style>

    <style name="GreyCards" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/light_grey_cards</item>
    </style>

    <style name="MyEditText" parent="ThemeOverlay.Material3.TextInputEditText" >
        <item name="background">@drawable/multi_line_text_style_day</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>




</resources>